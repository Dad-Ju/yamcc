{
	"name": "yamcc",
	"version": "1.0.0",
	"description": "Yet Another Minecraft Cloud",
	"repository": "https://github.com/Dad-Ju/yamcc.git",
	"author": "Justin Bedrich <justin.bedrich@gmail.com>",
	"license": "MIT",
	"private": "true",
	"workspaces": [
		"client",
		"controller",
		"worker"
	],
	"scripts": {
		"client": "yarn workspace client",
		"controller": "yarn workspace controller",
		"worker": "yarn workspace worker",
		"build": "echo 'not done yet!'",
		"start": "yarn run start:client && yarn run start:controller",
		"start:controller": "yarn workspace controller run start",
		"start:client": "yarn workspace client run build",
		"dev": "concurrently 'yarn run dev:controller' 'yarn run dev:client' --kill-others",
		"dev:controller": "yarn workspace controller run dev",
		"dev:client": "yarn workspace client run serve",
		"lint": "eslint --fix"
	},
	"devDependencies": {
		"@types/node": "^14.11.10",
		"@typescript-eslint/eslint-plugin": "^4.4.1",
		"@typescript-eslint/parser": "^4.4.1",
		"concurrently": "^5.3.0",
		"eslint": "^7.11.0",
		"eslint-config-prettier": "^6.13.0",
		"eslint-plugin-functional": "^3.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-no-null": "^1.0.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prefer-arrow-functions": "^3.0.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-standard": "^4.0.1",
		"nodemon": "^2.0.6",
		"prettier": "^2.1.2",
		"ts-node": "^9.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.0.3"
	},
	"engines": {
		"node": ">=13.2.0"
	},
	"engineStrict": true
}
